<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#c2c2c2"
    android:orientation="vertical">


    <fragment
        android:id="@+id/map"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="8dp">

        <Button

            android:id="@+id/bttn_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonHandling"
            android:text="Connect"
            android:visibility="visible" />

        <Button
            android:id="@+id/bttn_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="buttonHandling"
            android:text="Reset" />

        <Button
            android:id="@+id/bttn_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="buttonHandling"
            android:text="Button C" />

        <Button
            android:id="@+id/bttn_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="buttonHandling"
            android:text="Button D" />

    </LinearLayout>

    <ScrollView
        style="@android:style/Widget.Material.ScrollView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:fillViewport="true"
        android:scrollbarStyle="insideOverlay"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/linearLayout_messages"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:showDividers="end"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollY="100dp"
                android:scrollbarStyle="insideOverlay"
                android:scrollbars="vertical"
                android:text='>> "33-80-21-ae-5d-7e" ist beigetreten'
                android:textColor="@android:color/holo_orange_dark"
                android:visibility="visible" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollY="100dp"
                android:scrollbarStyle="insideOverlay"
                android:scrollbars="vertical"
                android:text='>> "23-80-41-ae-fd-7e" ist beigetreten'
                android:textColor="@android:color/holo_red_light"
                android:visibility="visible" />
        </LinearLayout>

    </ScrollView>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:targetApi="@android:color/holo_blue_light">

            <EditText
                android:id="@+id/editText_messages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Broadcast-Message"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/bttn_sendMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="buttonHandling"
                android:text="send"
                android:visibility="visible" />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>


</LinearLayout>